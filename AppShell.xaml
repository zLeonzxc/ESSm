<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ess_prototype.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:ess_prototype.Views">

    <!--Side Bar + Footer Navigation-->
    <FlyoutItem FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent Title="Home Page"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate Views:MainPage}"/>
        <Tab Title="Employee"
             Icon="employee.png">
            <ShellContent Title="Employee"
                          Icon="employee.png"
                          ContentTemplate="{DataTemplate Views:EmployeePage}"/>
            <ShellContent Title="Pending Leave"
                          Icon="pending.png"
                          ContentTemplate="{DataTemplate Views:PendingLeavePage}"/>
        </Tab>

        <ShellContent Title="Request Leave"
                      Icon="form.png"
                      ContentTemplate="{DataTemplate Views:ReqLeavePage}"/>

        <ShellContent Title="Profile"
                      Icon="user.png"
                      ContentTemplate="{DataTemplate Views:ProfilePage}"/>
    </FlyoutItem>

    <!--Content Page to simulate logging out-->
    <ShellContent Title="Logout"
                  Icon="logout.png"
                  ContentTemplate="{DataTemplate Views:LoginPage}"/>
</Shell>