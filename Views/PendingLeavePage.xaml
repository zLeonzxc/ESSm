<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESSmPrototype.Views.PendingLeavePage">

    <VerticalStackLayout>
        <TableView Intent="Data">
            <TableRoot>
                <TableSection Title="No.    |                                Title                             |    Status     |">
                    <ViewCell>
                        <Grid RowDefinitions="Auto,Auto"
                        ColumnDefinitions="0.5*,0.5*">
                            <Label Text="1"
                               Margin="20,10,0,0"/>
                            <Label Text="Medical Leave"
                               Margin="-60,10,0,0"
                               Grid.Column="1"/>
                            <Image Source="pendingleave.png"
                               WidthRequest="20"
                               HeightRequest="20"
                               Grid.Row="1"
                               Grid.Column="5"
                               Margin="0,-20,-100,0"/>

                        </Grid>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>