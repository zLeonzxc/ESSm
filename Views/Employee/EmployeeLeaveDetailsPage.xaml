<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESSmPrototype.Views.Employee.EmployeeLeaveDetailsPage">
    
    <ScrollView>
        <VerticalStackLayout Spacing="10" Margin="10,0,0,0">
            <Label Text="Employee Details"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   Style="{StaticResource Headline}"
                   SemanticProperties.HeadingLevel="Level4"/>
            <Label Text="Employee ID: "/>
            <Label Text="Employee Name: "/>
            <Label Text="Employee Position: "/>
            <Label Text="------------------------------------------------------------------------------------"/>
            <Label Text="Leave Approval Status: "/>
            <Label Text="Leave Reason: "/>
            <Label Text="Attachments (optional): "/>
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>