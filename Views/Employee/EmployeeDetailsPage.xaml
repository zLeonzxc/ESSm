<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ESSmPrototype.ViewModels"
             x:Class="ESSmPrototype.Views.Employee.EmployeeDetailsPage"
             Title="Employee Search">

<ContentPage.BindingContext>
    <local:EmployeeDetailsPageViewModel/>
</ContentPage.BindingContext>

    <ScrollView>
        <Frame BorderColor="Gray" CornerRadius="5" Padding="10" Margin="10">
            <StackLayout Spacing="10">

                <Entry x:Name="NameSearchBar" Placeholder="Name" TextChanged="OnSearchEntryChanged" Text="{Binding EmployeeName}"/>
                <Entry x:Name="EmpIDSearchBar" Placeholder="Employee ID" TextChanged="OnSearchEntryChanged" Text="{Binding EmployeeID}"/>

                <Label Text="{Binding Message}"/>

                <Label Text="{Binding EmployeeLegalName, StringFormat='Legal Name:  {0} '}"/>
                <Label Text="{Binding EmployeeLoginID, StringFormat='Employee Login ID:  {0} '}"/>
                <Label Text="{Binding EmployeeID, StringFormat='Employee ID:  {0} '}"/>
                <Label Text="{Binding Country, StringFormat='Country:  {0} '}"/>

            </StackLayout>
        </Frame>
    </ScrollView>
        
        
</ContentPage>