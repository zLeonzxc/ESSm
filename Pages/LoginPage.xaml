            <Image
                Source="oshrs.png"
                WidthRequest="200"
                HeightRequest="200">
            </Image>

            <Label
                Text="Welcome to ESS Mobile"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                Margin="0,-30,0,0"/>

            <Entry
                x:Name="EmailEntry"
                Placeholder="Email"
                ReturnType="Next"/>

            <Entry
                x:Name="PasswordEntry"
                Placeholder="Password"
                IsPassword="True"
                ReturnType="Done" />

            <Button
                x:Name="LoginBtn"
                Text="Login"
                HorizontalOptions="Fill" 
                BackgroundColor="DarkBlue"
                Clicked="OnLoginButtonClicked"/>

        </VerticalStackLayout>
    </ScrollView>
    
