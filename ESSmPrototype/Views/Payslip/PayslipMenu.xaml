<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESSmPrototype.Views.Payslip.PayslipMenu"
             xmlns:local="clr-namespace:ESSmPrototype.ViewModels">

    <ContentPage.BindingContext>
        <local:PayslipViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Recent Payslips"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />
            <CollectionView ItemsSource="{Binding RecentPayslips}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Gray" Padding="10" Margin="0,5">
                            <StackLayout>
                                <Label Text="{Binding Month}" FontSize="18" />
                                <Label Text="{Binding Year}" FontSize="14" />
                                <Label Text="{Binding Amount}" FontSize="14" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>