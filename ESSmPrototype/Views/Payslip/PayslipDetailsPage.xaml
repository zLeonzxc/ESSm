<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESSmPrototype.Views.Payslip.PayslipDetailsPage"
             xmlns:local="clr-namespace:ESSmPrototype.ViewModels"
             Title="Payslip Details">

    <ContentPage.BindingContext>
        <local:PayslipViewModel/>
    </ContentPage.BindingContext>

    <ScrollView Orientation="Both">
        <Grid Padding="20" RowSpacing="20" WidthRequest="1300" HeightRequest="700">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Company Name -->
            <Label Text="{Binding SelectedPayslip.CompanyName}" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   Grid.Row="0" Grid.ColumnSpan="3" />

            <!-- Employee Information -->
            <Frame Grid.Row="1" Grid.ColumnSpan="3"
                   BorderColor="Black"
                   CornerRadius="5"
                   Padding="10"
                   HasShadow="False">
                <Grid ColumnSpacing="20" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Left Column -->
                    <Label Text="Name of Employee:" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                    <Label Text="{Binding SelectedPayslip.EmployeeName}" Grid.Row="0" Grid.Column="1"/>
                    <Label Text="Department:" FontAttributes="Bold" Grid.Row="1" Grid.Column="0"/>
                    <Label Text="{Binding SelectedPayslip.Department}" Grid.Row="1" Grid.Column="1"/>
                    <Label Text="Mode of Payment:" FontAttributes="Bold" Grid.Row="2" Grid.Column="0"/>
                    <Label Text="{Binding SelectedPayslip.ModeOfPayment}" Grid.Row="2" Grid.Column="1"/>

                    <!-- Middle Column -->
                    <Label Text="Employee Code:" FontAttributes="Bold" Grid.Row="0" Grid.Column="2"/>
                    <Label Text="{Binding SelectedPayslip.EmployeeCode}" Grid.Row="0" Grid.Column="3"/>
                    <Label Text="Designation:" FontAttributes="Bold" Grid.Row="1" Grid.Column="2"/>
                    <Label Text="{Binding SelectedPayslip.Designation}" Grid.Row="1" Grid.Column="3"/>
                    <Label Text="Account No:" FontAttributes="Bold" Grid.Row="2" Grid.Column="2"/>
                    <Label Text="{Binding SelectedPayslip.AccountNumber}" Grid.Row="2" Grid.Column="3"/>

                    <!-- Right Column -->
                    <Label Text="Join Date:" FontAttributes="Bold" Grid.Row="0" Grid.Column="4"/>
                    <Label Text="{Binding SelectedPayslip.JoinDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Row="0" Grid.Column="5"/>
                    <Label Text="Date of Payment:" FontAttributes="Bold" Grid.Row="1" Grid.Column="4"/>
                    <Label Text="{Binding SelectedPayslip.DateOfPayment, StringFormat='{0:dd/MM/yyyy}'}" Grid.Row="1" Grid.Column="5"/>
                    <Label Text="Period:" FontAttributes="Bold" Grid.Row="2" Grid.Column="4"/>
                    <Label Text="{Binding SelectedPayslip.Period, StringFormat='{0:yyyy-MM}'}" Grid.Row="2" Grid.Column="5"/>
                </Grid>
            </Frame>

            <!-- Salary Payment Statement Title -->
            <Label Text="{Binding SelectedPayslip.Period, StringFormat='Salary Payment Statement ({0:yyyy-MM})'}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Start"
                   Margin="0,10,0,0"
                   Grid.Row="2" Grid.ColumnSpan="3" />

            <!-- Earnings, Deductions, Employer Contributions in a Table -->
            <Frame Grid.Row="3" Grid.ColumnSpan="3"
                   BorderColor="Black"
                   CornerRadius="5"
                   Padding="10"
                   HasShadow="False">
                <Grid ColumnSpacing="10" RowSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="1" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1"/>
                        <!-- Line Row -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1"/>
                        <!-- Line Row -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1"/>
                        <!-- Line Row -->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Vertical Line -->
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.RowSpan="9" Grid.Column="2"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.RowSpan="9" Grid.Column="5"/>

                    <!-- Header Row -->
                    <Label Text="Earnings" FontAttributes="Bold" Grid.Row="0" Grid.Column="0"/>
                    <Label Text="Deductions" FontAttributes="Bold" Grid.Row="0" Grid.Column="3"/>
                    <Label Text="Employer Contributions" FontAttributes="Bold" Grid.Row="0" Grid.Column="6"/>

                    <!-- Horizontal Line After Header -->
                    <BoxView BackgroundColor="Black" HeightRequest="1" Grid.Row="1" Grid.ColumnSpan="9"/>

                    <!-- Earnings Column -->
                    <Label Text="Basic Salary" Grid.Row="2" Grid.Column="0"/>
                    <Label Text="{Binding SelectedPayslip.BasicSalary, StringFormat=' {0:N2}'}" Grid.Row="2" Grid.Column="1" HorizontalTextAlignment="End"/>
                    <Label Text="Transport Allowance" Grid.Row="4" Grid.Column="0"/>
                    <Label Text="{Binding SelectedPayslip.TransportAllowance, StringFormat=' {0:N2}'}" Grid.Row="4" Grid.Column="1" HorizontalTextAlignment="End"/>
                    <Label Text="Gross Earnings" FontAttributes="Bold" Grid.Row="6" Grid.Column="0"/>
                    <Label Text="{Binding SelectedPayslip.GrossEarnings, StringFormat=' {0:N2}'}" FontAttributes="Bold" Grid.Row="6" Grid.Column="1" HorizontalTextAlignment="End"/>

                    <!-- Horizontal Line After Earnings -->
                    
                    <BoxView BackgroundColor="Black" HeightRequest="1" Grid.Row="5" Grid.ColumnSpan="9"/>

                    <!-- Deductions Column -->
                    <Label Text="SOCSO Employee" Grid.Row="2" Grid.Column="3"/>
                    <Label Text="{Binding SelectedPayslip.SocsoEmployee, StringFormat=' {0:N2}'}" Grid.Row="2" Grid.Column="4" HorizontalTextAlignment="End"/>
                    <Label Text="Tax Amount" Grid.Row="4" Grid.Column="3"/>
                    <Label Text="{Binding SelectedPayslip.TaxAmount, StringFormat=' {0:N2}'}" Grid.Row="4" Grid.Column="4" HorizontalTextAlignment="End"/>
                    <Label Text="Total Deductions" FontAttributes="Bold" Grid.Row="6" Grid.Column="3"/>
                    <Label Text="{Binding SelectedPayslip.TotalDeductions, StringFormat=' {0:N2}'}" FontAttributes="Bold" Grid.Row="6" Grid.Column="4" HorizontalTextAlignment="End"/>

                    <!-- Employer Contributions Column -->
                    <Label Text="SOCSO Employer" Grid.Row="2" Grid.Column="6"/>
                    <Label Text="{Binding SelectedPayslip.SocsoEmployer, StringFormat=' {0:N2}'}" Grid.Row="4" Grid.Column="7" HorizontalTextAlignment="End"/>
                    <Label Text="Total Employer Contributions" FontAttributes="Bold" Grid.Row="6" Grid.Column="6"/>
                    <Label Text="{Binding SelectedPayslip.TotalEmployerContributions, StringFormat=' {0:N2}'}" FontAttributes="Bold" Grid.Row="6" Grid.Column="7" HorizontalTextAlignment="End"/>

                    <BoxView BackgroundColor="Black" HeightRequest="1" Grid.Row="7" Grid.ColumnSpan="9"/>
                    <!-- Net Pay -->
                    <Label Text="Net Pay" 
                           FontAttributes="Bold"  
                           Grid.Row="8"
                           Grid.Column="6"/>
                    <Label Text="{Binding SelectedPayslip.NetPay, StringFormat=' {0:N2}'}" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           HorizontalOptions="Center"
                           Grid.Row="8"
                           Grid.Column="7"/>
                </Grid>
            </Frame>

            <!-- Year to Date -->
            <Frame Grid.Row="5" Grid.ColumnSpan="3"
                   BorderColor="Black"
                   CornerRadius="5"
                   Padding="10"
                   HasShadow="False">
                <Grid RowSpacing="0" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Header Row -->
                    <Label Text="YTD EPF Employee" FontAttributes="Bold" Padding="5" Grid.Column="0"/>
                    <Label Text="YTD EPF Employer" FontAttributes="Bold" Padding="5" Grid.Column="2"/>
                    <Label Text="YTD SOCSO Employee" FontAttributes="Bold" Padding="5" Grid.Column="4"/>
                    <Label Text="YTD SOCSO Employer" FontAttributes="Bold" Padding="5" Grid.Column="6"/>
                    <Label Text="YTD EIS Employee" FontAttributes="Bold" Padding="5" Grid.Column="8"/>
                    <Label Text="YTD EIS Employer" FontAttributes="Bold" Padding="5" Grid.Column="10"/>
                    <Label Text="YTD PCB" FontAttributes="Bold" Padding="5" Grid.Column="12"/>
                    <Label Text="YTD CP38" FontAttributes="Bold" Padding="5" Grid.Column="14"/>
                    <Label Text="YTD Gross" FontAttributes="Bold" Padding="5" Grid.Column="16"/>

                    <!--  Lines -->
                    <!-- Vertical -->
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="1" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="3" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="5" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="7" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="9" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="11" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="13" Grid.RowSpan="4"/>
                    <BoxView BackgroundColor="Black" WidthRequest="1" Grid.Column="15" Grid.RowSpan="4"/>
                    
                    <!-- Horizontal -->
                    <BoxView BackgroundColor="Black" HeightRequest="1" Grid.ColumnSpan="17" Grid.Row="1"/>


                    <!-- Values Row -->
                    <Label Text="{Binding SelectedPayslip.YtdEpfEmployee, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="0" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdEpfEmployer, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="2" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdSocsoEmployee, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="4" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdSocsoEmployer, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="6" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdEisEmployee, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="8" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdEisEmployer, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="10" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdPcb, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="12" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdCp38, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="14" HorizontalTextAlignment="Center" Padding="5"/>
                    <Label Text="{Binding SelectedPayslip.YtdGross, StringFormat='{0:F2}'}" Grid.Row="2" Grid.Column="16" HorizontalTextAlignment="Center" Padding="5"/>

                </Grid>
            </Frame>

        </Grid>
    </ScrollView>

</ContentPage>