<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ESSmPrototype.Custom.OverlayView"
             BackgroundColor="White">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Frame Padding="20" BackgroundColor="White" CornerRadius="10" HasShadow="True">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <ActivityIndicator IsRunning="True" Color="Black" WidthRequest="50" HeightRequest="50"/>
                <Label Text="Auto Login Enabled" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Text="Loading User Credentials..." TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
            </StackLayout>
        </Frame>
    </Grid>

</ContentView>
